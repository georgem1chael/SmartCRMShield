@model SmartCRMShield.Models.Transaction
@{
    ViewData["Title"] = "Delete Transaction";
}

<h2>@ViewData["Title"]</h2>

<p>Are you sure you want to delete this transaction?</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">User Email</dt>
        <dd class="col-sm-10">@Model.UserEmail</dd>
        
        <dt class="col-sm-2">Amount (€)</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
        
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        
        <dt class="col-sm-2">Fraud Alert</dt>
        <dd class="col-sm-10">
            @if (Model.IsFraudAlert)
            {
                <span class="text-danger fw-bold">⚠️ FRAUD</span>
            }
            else
            {
                <span class="text-success">OK</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
